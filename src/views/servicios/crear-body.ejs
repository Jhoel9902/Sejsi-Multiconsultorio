<!-- CREAR SERVICIO -->
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Crear Nuevo Servicio</h4>
                </div>
                <div class="card-body">
                    <% if (error) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Error:</strong> <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>

                    <form method="POST" action="/servicios">
                        <div class="mb-3">
                            <label for="nombre" class="form-label"><strong>Nombre del Servicio *</strong></label>
                            <input type="text" class="form-control" id="nombre" name="nombre" required placeholder="Ej: Consulta General">
                        </div>

                        <div class="mb-3">
                            <label for="precio" class="form-label"><strong>Precio (Bs.) *</strong></label>
                            <input type="number" class="form-control" id="precio" name="precio" step="0.01" min="0" required placeholder="0.00">
                        </div>

                        <div class="mb-3">
                            <label for="descripcion" class="form-label"><strong>Descripci√≥n</strong></label>
                            <textarea class="form-control" id="descripcion" name="descripcion" rows="4" placeholder="Describe el servicio..."></textarea>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary flex-grow-1">
                                <i class="bi bi-save me-2"></i>Guardar
                            </button>
                            <a href="/servicios" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
