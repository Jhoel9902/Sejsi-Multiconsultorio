<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header border-bottom">
        <div class="d-flex align-items-center justify-content-between">
          <h5 class="mb-0"><i class="bi bi-person-circle me-2"></i>Detalles del Paciente</h5>
          <span class="badge bg-light text-dark"><%= paciente.codigo_paciente %></span>
        </div>
      </div>

      <div class="card-body p-4">
        <!-- Estado del paciente -->
        <% const activo = (paciente.estado === true || paciente.estado === 1 || paciente.estado === '1'); %>
        <% if (!activo) { %>
          <div class="alert alert-warning mb-4" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <strong>Paciente Inactivo:</strong> Este paciente está marcado como inactivo en el sistema.
          </div>
        <% } else { %>
          <div class="alert alert-success mb-4" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            <strong>Paciente Activo</strong>
          </div>
        <% } %>

        <!-- Datos personales -->
        <h6 class="mb-3 text-uppercase text-muted fw-semibold">
          <i class="bi bi-person me-2"></i>Datos Personales
        </h6>
        <div class="row mb-4">
          <div class="col-md-6 mb-3">
            <div class="form-floating">
              <input type="text" class="form-control" value="<%= paciente.nombre %>" disabled />
              <label>Nombre</label>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-floating">
              <input type="text" class="form-control" value="<%= paciente.apellido_paterno %>" disabled />
              <label>Apellido Paterno</label>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-floating">
              <input type="text" class="form-control" value="<%= paciente.apellido_materno || '' %>" disabled />
              <label>Apellido Materno</label>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-floating">
              <input type="date" class="form-control" value="<%= paciente.fecha_nacimiento ? new Date(paciente.fecha_nacimiento).toISOString().split('T')[0] : '' %>" disabled />
              <label>Fecha de Nacimiento</label>
            </div>
          </div>
        </div>

        <hr />

        <!-- Documentos y contacto -->
        <h6 class="mb-3 text-uppercase text-muted fw-semibold">
          <i class="bi bi-card-text me-2"></i>Documentos y Contacto
        </h6>
        <div class="row mb-4">
          <div class="col-md-6 mb-3">
            <div class="form-floating">
              <input type="text" class="form-control" value="<%= paciente.ci || '' %>" disabled />
              <label>Cédula de Identidad</label>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-floating">
              <input type="text" class="form-control" value="<%= paciente.nacionalidad || '' %>" disabled />
              <label>Nacionalidad</label>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-floating">
              <input type="email" class="form-control" value="<%= paciente.correo || '' %>" disabled />
              <label>Correo Electrónico</label>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-floating">
              <input type="tel" class="form-control" value="<%= paciente.celular || '' %>" disabled />
              <label>Teléfono</label>
            </div>
          </div>
        </div>

        <hr />

        <!-- Datos médicos -->
        <h6 class="mb-3 text-uppercase text-muted fw-semibold">
          <i class="bi bi-heart-pulse me-2"></i>Datos Médicos
        </h6>
        <div class="row mb-4">
          <div class="col-md-6 mb-3">
            <div class="form-floating">
              <input type="text" class="form-control" value="<%= paciente.tipo_sangre || '' %>" disabled />
              <label>Tipo de Sangre</label>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-floating">
              <input type="text" class="form-control" value="<%= paciente.estado_civil || '' %>" disabled />
              <label>Estado Civil</label>
            </div>
          </div>
          <div class="col-12 mb-3">
            <label class="form-label">Alergias</label>
            <div class="form-control" style="height: auto; min-height: 80px; background-color: #f8f9fa;">
              <p class="mb-0 text-muted"><%= paciente.alergias || '(Sin información)' %></p>
            </div>
          </div>
          <div class="col-12 mb-3">
            <label class="form-label">Enfermedad Base</label>
            <div class="form-control" style="height: auto; min-height: 80px; background-color: #f8f9fa;">
              <p class="mb-0 text-muted"><%= paciente.enfermedad_base || '(Sin información)' %></p>
            </div>
          </div>
        </div>

        <hr />

        <!-- Domicilio -->
        <h6 class="mb-3 text-uppercase text-muted fw-semibold">
          <i class="bi bi-house me-2"></i>Domicilio
        </h6>
        <div class="mb-4">
          <label class="form-label">Dirección</label>
          <div class="form-control" style="height: auto; min-height: 80px; background-color: #f8f9fa;">
            <p class="mb-0 text-muted"><%= paciente.domicilio || '(Sin información)' %></p>
          </div>
        </div>

        <hr />

        <!-- Antecedentes -->
        <h6 class="mb-3 text-uppercase text-muted fw-semibold">
          <i class="bi bi-file-medical me-2"></i>Antecedentes y Observaciones
        </h6>
        <div class="row mb-4">
          <div class="col-12 mb-3">
            <label class="form-label">Contacto de Emergencia</label>
            <div class="form-control" style="height: auto; min-height: 60px; background-color: #f8f9fa;">
              <p class="mb-0 text-muted"><%= paciente.contacto_emerg || '(Sin información)' %></p>
            </div>
          </div>
          <div class="col-12">
            <label class="form-label">Observaciones</label>
            <div class="form-control" style="height: auto; min-height: 80px; background-color: #f8f9fa;">
              <p class="mb-0 text-muted"><%= paciente.observaciones || '(Sin información)' %></p>
            </div>
          </div>
        </div>

        <!-- Información de registro -->
        <hr />
        <div class="small text-muted">
          <div class="mb-2">
            <i class="bi bi-calendar me-1"></i>
            <strong>Fecha de registro:</strong> 
            <%= new Date(paciente.fecha_creacion).toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' }) %>
          </div>
          <% if (paciente.fecha_actualizacion) { %>
            <div>
              <i class="bi bi-clock me-1"></i>
              <strong>Última actualización:</strong> 
              <%= new Date(paciente.fecha_actualizacion).toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' }) %>
            </div>
          <% } %>
        </div>

        <!-- Botones de acción -->
        <div class="mt-4 d-flex gap-2">
          <% if (user.nombre_rol !== 'medico') { %>
            <a href="/pacientes/editar/<%= paciente.id_paciente %>" class="btn btn-primary">
              <i class="bi bi-pencil me-1"></i>Editar
            </a>
          <% } %>
          <a href="/pacientes" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Volver a la lista
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
