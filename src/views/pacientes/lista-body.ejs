<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body p-4">
        <!-- Barra de búsqueda -->
        <div class="mb-4">
          <div class="input-group">
            <span class="input-group-text bg-light border-0"><i class="bi bi-search"></i></span>
            <input 
              type="text" 
              class="form-control border-start-0" 
              id="inputBusqueda" 
              placeholder="Buscar por nombre, apellido, código, CI o correo..."
              autocomplete="off"
            >
          </div>
        </div>

        <!-- El medico no puede agregar pacientes solo vent y el admin -->
        <div class="d-flex align-items-center justify-content-between mb-4 flex-wrap gap-2">
          <h5 class="card-title mb-0"><i class="bi bi-people me-2"></i>Pacientes</h5>
          <% if (user.nombre_rol !== 'medico') { %>
            <a href="/pacientes/crear" class="btn btn-primary btn-sm"><i class="bi bi-person-plus me-1"></i>Nuevo</a>
          <% } %>
        </div>

        <!-- Tabla de pacientes -->
        <% if (pacientes && pacientes.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-hover table-sm align-middle">
              <thead class="table-light">
                <tr>
                  <th class="fw-semibold">Código</th>
                  <th class="fw-semibold">Nombres</th>
                  <th class="fw-semibold d-none d-md-table-cell">Cédula</th>
                  <th class="fw-semibold d-none d-lg-table-cell">Teléfono</th>
                  <th class="fw-semibold d-none d-xl-table-cell">Correo</th>
                  <th class="fw-semibold text-center">Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% pacientes.forEach(p => { %>
                  <tr>
                    <td>
                      <span class="badge bg-light text-dark"><%= p.codigo_paciente %></span>
                    </td>
                    <td>
                      <strong><%= p.nombre %> <%= p.apellido_paterno %></strong>
                      <% if (p.apellido_materno) { %>
                        <br><small class="text-muted"><%= p.apellido_materno %></small>
                      <% } %>
                    </td>
                    <td class="d-none d-md-table-cell"><small><%= p.ci || '-' %></small></td>
                    <td class="d-none d-lg-table-cell"><small><%= p.celular || '-' %></small></td>
                    <td class="d-none d-xl-table-cell"><small><%= p.correo || '-' %></small></td>
                    <td class="text-center">
                      <div class="btn-group btn-group-sm" role="group">
                        <button type="button" class="btn btn-outline-info" onclick="abrirModalDetalles('<%= p.id_paciente %>')" title="Ver detalles del paciente">
                          <i class="bi bi-eye"></i>
                        </button>
                        <% if (user.nombre_rol !== 'medico') { %>
                          <button class="btn btn-outline-secondary" onclick="abrirModalEditar('<%= p.id_paciente %>')" title="Editar paciente">
                            <i class="bi bi-pencil"></i>
                          </button>
                        <% } %>
                        <% if (user.nombre_rol === 'admin') { %>
                          <button type="button" class="btn btn-outline-danger" onclick="eliminarPaciente('<%= p.id_paciente %>', '<%= p.nombre %> <%= p.apellido_paterno %>')" title="Eliminar paciente (borrado lógico)">
                            <i class="bi bi-trash"></i>
                          </button>
                        <% } %>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="alert alert-info text-center my-4">
            <i class="bi bi-info-circle me-2"></i>
            <strong>No hay pacientes registrados</strong>
            <% if (user.nombre_rol !== 'medico') { %>
              <br>
              <a href="/pacientes/crear" class="alert-link">Registrar el primer paciente</a>
            <% } %>
          </div>
        <% } %>

        <!-- Paginación -->
        <% if (pacientes && pacientes.length > 0 && totalPaginas > 1) { %>
          <nav aria-label="Paginación de pacientes" class="mt-4" id="seccionPaginacion">
            <ul class="pagination justify-content-center">
              <!-- Página anterior -->
              <li class="page-item <%= paginaActual === 1 ? 'disabled' : '' %>">
                <a class="page-link limpiarBusquedaLink" href="/pacientes?filtro=<%= filtroActual %>&pagina=<%= paginaActual - 1 %>">Anterior</a>
              </li>

              <!-- Números de página -->
              <% 
                const mostrarDesde = Math.max(1, paginaActual - 2);
                const mostrarHasta = Math.min(totalPaginas, paginaActual + 2);
                
                if (mostrarDesde > 1) { %>
                  <li class="page-item">
                    <a class="page-link limpiarBusquedaLink" href="/pacientes?filtro=<%= filtroActual %>&pagina=1">1</a>
                  </li>
                  <% if (mostrarDesde > 2) { %>
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                  <% } %>
              <% } %>

              <% for (let i = mostrarDesde; i <= mostrarHasta; i++) { %>
                <li class="page-item <%= i === paginaActual ? 'active' : '' %>">
                  <a class="page-link limpiarBusquedaLink" href="/pacientes?filtro=<%= filtroActual %>&pagina=<%= i %>"><%= i %></a>
                </li>
              <% } %>

              <% if (mostrarHasta < totalPaginas) { %>
                <% if (mostrarHasta < totalPaginas - 1) { %>
                  <li class="page-item disabled"><span class="page-link">...</span></li>
                <% } %>
                <li class="page-item">
                  <a class="page-link limpiarBusquedaLink" href="/pacientes?filtro=<%= filtroActual %>&pagina=<%= totalPaginas %>"><%= totalPaginas %></a>
                </li>
              <% } %>

              <!-- Página siguiente -->
              <li class="page-item <%= paginaActual === totalPaginas ? 'disabled' : '' %>">
                <a class="page-link limpiarBusquedaLink" href="/pacientes?filtro=<%= filtroActual %>&pagina=<%= paginaActual + 1 %>">Siguiente</a>
              </li>
            </ul>
          </nav>
          
          <!-- Info de paginación -->
          <div class="text-center text-muted small mt-2" id="infoPaginacion">
            Mostrando <strong><%= (paginaActual - 1) * 20 + 1 %></strong> a <strong><%= Math.min(paginaActual * 20, totalPacientes) %></strong> de <strong><%= totalPacientes %></strong> pacientes
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<!-- Modal Detalles del Paciente -->
<div class="modal fade" id="modalDetalles" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable modal-lg">
    <div class="modal-content border-0 shadow-lg">
      <button type="button" class="btn-close position-absolute top-0 end-0 m-3" data-bs-dismiss="modal" aria-label="Close" style="z-index: 1050;"></button>
      <div id="modalDetallesBody">
        <div class="text-center py-5">
          <div class="spinner-border text-success" role="status">
            <span class="visually-hidden">Cargando detalles...</span>
          </div>
          <p class="text-muted mt-3">Cargando información del paciente...</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal Editar Paciente -->
<div class="modal fade" id="modalEditar" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable modal-lg">
    <div class="modal-content">
      <div class="modal-header border-bottom">
        <h5 class="modal-title"><i class="bi bi-pencil-square me-2"></i>Editar paciente</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="modalBody" class="modal-body">
        <div class="text-center py-5">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando formulario...</span>
          </div>
          <p class="text-muted mt-3">Cargando formulario...</p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
let pacientesOriginales = [];

document.addEventListener('DOMContentLoaded', function() {
  const filas = document.querySelectorAll('tbody tr');
  filas.forEach(fila => {
    const codigo = fila.querySelector('td:nth-child(1)').textContent;
    const td_nombre = fila.querySelector('td:nth-child(2)');
    const nombres = td_nombre.textContent;
    const ci = fila.querySelector('td:nth-child(3)').textContent;
    const correo = fila.querySelector('td:nth-child(5)').textContent;
    
    pacientesOriginales.push({
      fila: fila.cloneNode(true),
      codigo: codigo.toLowerCase(),
      nombres: nombres.toLowerCase(),
      ci: ci.toLowerCase(),
      correo: correo.toLowerCase()
    });
  });
  
  const inputBusqueda = document.getElementById('inputBusqueda');
  if (inputBusqueda) {
    inputBusqueda.addEventListener('keyup', realizarBusqueda);
  }
});

function realizarBusqueda() {
  const termino = document.getElementById('inputBusqueda').value.toLowerCase().trim();
  const tbody = document.querySelector('tbody');
  const seccionPaginacion = document.getElementById('seccionPaginacion');
  const infoPaginacion = document.getElementById('infoPaginacion');
  
  if (termino === '') {
    // Si el input está vacío, mostrar todos y revelar paginación
    tbody.innerHTML = '';
    pacientesOriginales.forEach(item => {
      tbody.appendChild(item.fila.cloneNode(true));
    });
    // Mostrar paginación si hay más de 1 página
    if (seccionPaginacion) seccionPaginacion.style.display = 'block';
    if (infoPaginacion) infoPaginacion.style.display = 'block';
    // Re-asignar eventos a nuevos elementos
    asignarEventos();
    return;
  }
  
  // Filtrar pacientes
  const resultados = pacientesOriginales.filter(item => {
    return item.codigo.includes(termino) ||
           item.nombres.includes(termino) ||
           item.ci.includes(termino) ||
           item.correo.includes(termino);
  });
  
  // Actualizar tabla
  tbody.innerHTML = '';
  if (resultados.length > 0) {
    resultados.forEach(item => {
      tbody.appendChild(item.fila.cloneNode(true));
    });
  } else {
    tbody.innerHTML = '<tr><td colspan="6" class="text-center text-muted py-4"><i class="bi bi-search me-2"></i>No se encontraron pacientes.</td></tr>';
  }
  
  // OCULTAR paginación cuando hay búsqueda activa
  if (seccionPaginacion) seccionPaginacion.style.display = 'none';
  if (infoPaginacion) infoPaginacion.style.display = 'none';
  
  // Re-asignar eventos a nuevos elementos
  asignarEventos();
}

function asignarEventos() {
  // Re-asignar onclick a botones después de filtrar
  const botonesDetalles = document.querySelectorAll('button[onclick*="abrirModalDetalles"]');
  const botonesEditar = document.querySelectorAll('button[onclick*="abrirModalEditar"]');
  const botonesEliminar = document.querySelectorAll('button[onclick*="eliminarPaciente"]');
  const linksLimpiarBusqueda = document.querySelectorAll('a.limpiarBusquedaLink');
  
  botonesDetalles.forEach(btn => {
    btn.onclick = null;
    const idPaciente = btn.getAttribute('onclick').match(/'([^']+)'/)[1];
    btn.onclick = () => abrirModalDetalles(idPaciente);
  });
  
  botonesEditar.forEach(btn => {
    btn.onclick = null;
    const idPaciente = btn.getAttribute('onclick').match(/'([^']+)'/)[1];
    btn.onclick = () => abrirModalEditar(idPaciente);
  });
  
  botonesEliminar.forEach(btn => {
    btn.onclick = null;
    const match = btn.getAttribute('onclick').match(/'([^']+)',\s*'([^']+)'/);
    const idPaciente = match[1];
    const nombre = match[2];
    btn.onclick = () => eliminarPaciente(idPaciente, nombre);
  });
  
  // Agregar evento a links de paginación para limpiar búsqueda
  linksLimpiarBusqueda.forEach(link => {
    link.addEventListener('click', function(e) {
      const inputBusqueda = document.getElementById('inputBusqueda');
      if (inputBusqueda && inputBusqueda.value.trim() !== '') {
        e.preventDefault();
        inputBusqueda.value = '';
        // Navegar a la URL del link
        window.location.href = this.href;
      }
    });
  });
}

async function eliminarPaciente(idPaciente, nombre) {
  if (!confirm(`¿Está seguro de que desea eliminar al paciente "${nombre}"? Esta acción no se puede deshacer.`)) {
    return;
  }
  
  try {
    const response = await fetch(`/pacientes/eliminar/${idPaciente}`, {
      method: 'POST',
      headers: {
        'X-Requested-With': 'XMLHttpRequest'
      }
    });
    
    if (response.ok) {
      showToast('Éxito', 'Paciente eliminado exitosamente.', 'success');
      setTimeout(() => window.location.reload(), 1500);
    } else {
      const data = await response.json();
      showToast('Error', data.mensaje || 'No se pudo eliminar el paciente.', 'danger');
    }
  } catch (err) {
    showToast('Error', 'Error al eliminar: ' + err.message, 'danger');
  }
}

async function abrirModalEditar(idPaciente) {
  const modal = new bootstrap.Modal(document.getElementById('modalEditar'));
  const modalBody = document.getElementById('modalBody');
  
  try {
    const response = await fetch(`/pacientes/obtener-form/${idPaciente}`);
    if (!response.ok) throw new Error('Error al cargar');
    const html = await response.text();
    modalBody.innerHTML = html;
    modal.show();
    
    // Asignar evento al formulario después de cargar
    setTimeout(() => {
      const form = modalBody.querySelector('form');
      if (form) {
        form.addEventListener('submit', manejarSubmitModal);
      }
    }, 100);
  } catch (err) {
    modalBody.innerHTML = '<div class="alert alert-danger"><i class="bi bi-exclamation-triangle me-2"></i>Error al cargar el formulario.</div>';
  }
}

async function manejarSubmitModal(e) {
  e.preventDefault();
  const form = e.target;
  const url = form.getAttribute('action');
  const submitBtn = form.querySelector('button[type="submit"]');
  const originalText = submitBtn.innerHTML;
  
  // Deshabilitar botón y mostrar spinner
  submitBtn.disabled = true;
  submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Guardando...';
  
  try {
    // Convertir FormData a objeto JSON para mejor compatibilidad
    const formData = new FormData(form);
    const data = {};
    formData.forEach((value, key) => {
      data[key] = value;
    });
    
    const response = await fetch(url, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-Requested-With': 'XMLHttpRequest'
      },
      body: JSON.stringify(data)
    });
    
    if (response.ok) {
      const data = await response.json();
      bootstrap.Modal.getInstance(document.getElementById('modalEditar')).hide();
      
      // Mostrar notificación de éxito
      showToast('Éxito', data.mensaje || 'Paciente actualizado exitosamente.', 'success');
      
      // Recargar tabla después de 1 segundo
      setTimeout(() => window.location.reload(), 1000);
    } else {
      const data = await response.json();
      showToast('Error', data.mensaje || 'No se pudo actualizar el paciente.', 'danger');
      submitBtn.disabled = false;
      submitBtn.innerHTML = originalText;
    }
  } catch (err) {
    showToast('Error', 'Error al enviar el formulario: ' + err.message, 'danger');
    submitBtn.disabled = false;
    submitBtn.innerHTML = originalText;
  }
}

function showToast(title, message, type = 'success') {
  const toastContainer = document.querySelector('body');
  const toastHtml = `
    <div class="toast align-items-center text-white bg-${type} border-0" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          <!--El mensaje de error esta aqui (los errores de la BD estan igual en sp y back + front XD?)-->
          <strong>Talvez aqui?? ${title}:</strong> ${message}
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  `;
  const tempDiv = document.createElement('div');
  tempDiv.innerHTML = toastHtml;
  const toastEl = tempDiv.firstElementChild;
  
  // Agregar estilos para el contenedor
  toastEl.style.position = 'fixed';
  toastEl.style.top = '20px';
  toastEl.style.right = '20px';
  toastEl.style.minWidth = '300px';
  toastEl.style.zIndex = '9999';
  
  document.body.appendChild(toastEl);
  const toast = new bootstrap.Toast(toastEl);
  toast.show();
  
  // Eliminar elemento después de que se oculte
  toastEl.addEventListener('hidden.bs.toast', () => {
    toastEl.remove();
  });
}

async function abrirModalDetalles(idPaciente) {
  const modal = new bootstrap.Modal(document.getElementById('modalDetalles'));
  const modalBody = document.getElementById('modalDetallesBody');
  
  try {
    const response = await fetch(`/pacientes/obtener-detalles/${idPaciente}`);
    if (!response.ok) throw new Error('Error al cargar');
    const html = await response.text();
    modalBody.innerHTML = html;
    modal.show();
  } catch (err) {
    modalBody.innerHTML = '<div class="alert alert-danger m-4"><i class="bi bi-exclamation-triangle me-2"></i>Error al cargar los detalles.</div>';
  }
}
</script>
