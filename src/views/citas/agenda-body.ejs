<script src="https://cdn.jsdelivr.net/npm/@fullcalendar/core@6.1.14/index.global.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@fullcalendar/daygrid@6.1.14/index.global.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@fullcalendar/timegrid@6.1.14/index.global.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@fullcalendar/interaction@6.1.14/index.global.min.js"></script>

<script>
    const userRole = '<%= user.nombre_rol %>';
    const userIdPersonal = '<%= user.id_personal %>';
    let currentMedicoId = null;
    let calendar = null;
    let citasData = {};

    // Inicializar medico search (para ventanilla y admin)
    if (userRole === 'ventanilla' || userRole === 'admin') {
        const searchInput = document.getElementById('medico-search');
        const dropdown = document.getElementById('medico-dropdown');
        const medicoItems = dropdown.querySelectorAll('.medico-item');

        searchInput.addEventListener('input', (e) => {
            const term = e.target.value.toLowerCase();
            medicoItems.forEach(item => {
                const matches = item.dataset.name.toLowerCase().includes(term);
                item.style.display = matches ? 'block' : 'none';
            });
            dropdown.classList.toggle('show', term.length > 0);
        });

        searchInput.addEventListener('focus', () => {
            if (searchInput.value.length > 0) {
                dropdown.classList.add('show');
            }
        });

        document.addEventListener('click', (e) => {
            if (e.target !== searchInput) {
                dropdown.classList.remove('show');
            }
        });

        medicoItems.forEach(item => {
            item.addEventListener('click', () => {
                const id = item.dataset.id;
                const name = item.dataset.name;
                selectMedico(id, name);
            });
        });
    } else {
        // Para mÃ©dicos, auto-seleccionar usando su propio id
        const userName = '<%= user.nombres %>';
        selectMedico(userIdPersonal, userName);
    }

    function selectMedico(id, name) {
        currentMedicoId = id;
        
        // Solo actualizar el search input si existe (para ventanilla)
        const searchInput = document.getElementById('medico-search');
        if (searchInput) {
            searchInput.value = name;
        }
        
        // Solo ocultar dropdown si existe (para ventanilla)
        const dropdown = document.getElementById('medico-dropdown');
        if (dropdown) {
            dropdown.classList.remove('show');
        }
        
        // Solo mostrar selected badge si existe (para ventanilla)
        const medicoSelected = document.getElementById('medico-selected');
        if (medicoSelected) {
            medicoSelected.style.display = 'block';
            document.getElementById('selected-medico-name').textContent = name;
        }
        
        document.getElementById('no-medico').style.display = 'none';
        document.getElementById('stats-container').style.display = 'grid';
        document.getElementById('calendario').style.display = 'block';

        if (!calendar) {
            initializeCalendar();
        } else {
            cargarCitasDelMedico();
        }
    }

    function initializeCalendar() {
        const calendarEl = document.getElementById('calendario');
        const hoy = new Date();

        calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            headerToolbar: {
                left: 'prev,next today',
                center: 'title',
                right: 'dayGridMonth,timeGridWeek'
            },
            locale: 'es',
            height: 'auto',
            eventDidMount(info) {
                info.el.style.cursor = 'pointer';
                info.el.addEventListener('click', () => mostrarCitaDelDia(info.event.startStr));
            },
            datesSet() {
                cargarCitasDelMedico();
            }
        });

        calendar.render();
        cargarCitasDelMedico();
    }

    async function cargarCitasDelMedico() {
        if (!currentMedicoId || !calendar) return;

        const start = calendar.getDate();
        const fin = new Date(start);
        fin.setMonth(fin.getMonth() + 1);

        const fecha_inicio = start.toISOString().split('T')[0];
        const fecha_fin = fin.toISOString().split('T')[0];

        try {
            const response = await fetch(
                `/citas/agenda/listar?id_personal=${currentMedicoId}&fecha_inicio=${fecha_inicio}&fecha_fin=${fecha_fin}&estado=todas`
            );
            const data = await response.json();

            if (!data.success) {
                mostrarAlerta(data.mensaje, 'danger');
                return;
            }

            const citas = data.citas || [];
            citasData = {};

            // Procesar citas para el calendario
            const events = citas.map(cita => {
                const fecha = cita.fecha_cita.split('T')[0];
                if (!citasData[fecha]) citasData[fecha] = [];
                citasData[fecha].push(cita);

                return {
                    id: cita.id_cita,
                    title: `${cita.nombre_paciente} - ${cita.hora_formato}`,
                    start: cita.fecha_cita,
                    backgroundColor: getColorByEstado(cita.estado_cita),
                    borderColor: getColorByEstado(cita.estado_cita),
                    extendedProps: cita
                };
            });

            calendar.removeAllEvents();
            calendar.addEventSource(events);

            // Actualizar estadÃ­sticas
            const conteos = data.conteos || {};
            document.getElementById('stat-total').textContent = conteos.total_citas || 0;
            document.getElementById('stat-confirmada').textContent = conteos.citas_confirmadas || 0;
            document.getElementById('stat-completada').textContent = conteos.citas_completadas || 0;
            document.getElementById('stat-cancelada').textContent = conteos.citas_canceladas || 0;
            document.getElementById('stat-hoy').textContent = conteos.citas_hoy || 0;
        } catch (error) {
            console.error('Error al cargar citas:', error);
            mostrarAlerta('Error al cargar citas', 'danger');
        }
    }

    function getColorByEstado(estado) {
        const colors = {
            confirmada: '#198754',
            completada: '#0dcaf0',
            cancelada: '#dc3545'
        };
        return colors[estado] || '#667eea';
    }

    async function mostrarCitaDelDia(fecha) {
        const citas = citasData[fecha] || [];

        if (citas.length === 0) {
            mostrarAlerta('No hay citas para este dÃ­a', 'info');
            return;
        }

        const fechaObj = new Date(fecha);
        const fechaFormato = fechaObj.toLocaleDateString('es-ES', {
            weekday: 'long',
            year: 'numeric',
            month: 'long',
            day: 'numeric'
        });

        let htmlContent = '<div class="citas-list">';
        citas.forEach(cita => {
            const estadoBadge = {
                confirmada: '<span class="badge bg-success">Confirmada</span>',
                completada: '<span class="badge bg-info">Completada</span>',
                cancelada: '<span class="badge bg-danger">Cancelada</span>'
            }[cita.estado_cita] || '<span class="badge bg-secondary">Desconocido</span>';

            htmlContent += `
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-md-8">
                                <h6 class="card-subtitle mb-2"><strong>${cita.hora_formato}</strong> - ${cita.nombre_paciente}</h6>
                                <p class="text-muted mb-2">
                                    <small>ðŸ“ž ${cita.celular || '-'} | ðŸ“§ ${cita.correo || '-'}</small>
                                </p>
                                <p class="text-muted mb-2">
                                    <small>ðŸ’Š ${cita.nombre_servicio}</small>
                                </p>
                                <p>${estadoBadge}</p>
                            </div>
                            <div class="col-md-4 text-end">
                                <button class="btn btn-sm btn-primary" onclick="verDetalles('${cita.id_cita}')">
                                    Ver Detalles
                                </button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
            `;

            if (userRole === 'ventanilla' && cita.estado_cita === 'confirmada') {
                if (cita.nro_reprogramaciones === 0) {
                    htmlContent += `
                        <a href="/citas/${cita.id_cita}/reprogramar" class="btn btn-sm btn-warning">
                            Reprogramar
                        </a>
                    `;
                }
                htmlContent += `
                    <button class="btn btn-sm btn-success" onclick="abrirModalAsistencia('${cita.id_cita}')">
                        Marcar Asistencia
                    </button>
                    <button class="btn btn-sm btn-danger" onclick="cancelarCita('${cita.id_cita}')">
                        Cancelar
                    </button>
                `;
            }

            htmlContent += `
                            </div>
                        </div>
                    </div>
                </div>
            `;
        });
        htmlContent += '</div>';

        document.getElementById('dia-seleccionado').textContent = fechaFormato;
        document.getElementById('citas-dia-content').innerHTML = htmlContent;
        new bootstrap.Modal(document.getElementById('modalCitasDia')).show();
    }

    async function verDetalles(id_cita) {
        try {
            const response = await fetch(`/citas/${id_cita}`);
            const data = await response.json();

            if (!data.success) {
                mostrarAlerta(data.mensaje, 'danger');
                return;
            }

            const cita = data.cita;
            const detallesHtml = `
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p><strong>ID Cita:</strong> ${cita.id_cita}</p>
                        <p><strong>Paciente:</strong> ${cita.nombre_paciente}</p>
                        <p><strong>TelÃ©fono:</strong> ${cita.celular || '-'}</p>
                        <p><strong>Email:</strong> ${cita.correo || '-'}</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>MÃ©dico:</strong> ${cita.nombre_medico}</p>
                        <p><strong>Fecha/Hora:</strong> ${cita.fecha_formato} a las ${cita.hora_formato}</p>
                        <p><strong>Servicio:</strong> ${cita.nombre_servicio}</p>
                        <p><strong>Estado:</strong> <span class="badge bg-primary">${cita.estado_cita}</span></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <p><strong>Motivo Consulta:</strong></p>
                        <p class="border p-2 bg-light">${cita.motivo_consulta || 'N/A'}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <p><strong>Observaciones:</strong></p>
                        <p class="border p-2 bg-light">${cita.observaciones || 'N/A'}</p>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <p><strong>Reprogramaciones:</strong> ${cita.nro_reprogramaciones}</p>
                        <p><strong>Fecha CreaciÃ³n:</strong> ${cita.fecha_creacion ? new Date(cita.fecha_creacion).toLocaleString() : 'N/A'}</p>
                    </div>
                </div>
            `;

            document.getElementById('detalles-content').innerHTML = detallesHtml;
            new bootstrap.Modal(document.getElementById('modalDetalles')).show();
        } catch (error) {
            console.error('Error al obtener detalles:', error);
            mostrarAlerta('Error al cargar detalles', 'danger');
        }
    }

    function mostrarAlerta(mensaje, tipo = 'danger') {
        const alertasDiv = document.getElementById('alertas');
        alertasDiv.innerHTML = `
            <div class="alert alert-${tipo} alert-dismissible fade show" role="alert">
                ${mensaje}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        `;
        setTimeout(() => alertasDiv.innerHTML = '', 4000);
    }

    async function cancelarCita(id_cita) {
        if (!confirm('Â¿EstÃ¡s seguro de que deseas cancelar esta cita?')) {
            return;
        }

        try {
            const response = await fetch(`/citas/${id_cita}/cancelar`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });

            const data = await response.json();

            if (!data.success) {
                mostrarAlerta(data.mensaje, 'danger');
                return;
            }

            mostrarAlerta('âœ… ' + data.mensaje, 'success');
            setTimeout(() => cargarCitasDelMedico(), 1000);
            
            const modal = bootstrap.Modal.getInstance(document.getElementById('modalCitasDia'));
            if (modal) modal.hide();
        } catch (error) {
            console.error('Error:', error);
            mostrarAlerta('Error al cancelar cita', 'danger');
        }
    }

    async function abrirModalAsistencia(id_cita) {
        try {
            const response = await fetch(`/citas/${id_cita}/marcar-asistencia`);
            const data = await response.json();

            if (!data.success) {
                mostrarAlerta(data.mensaje, 'danger');
                return;
            }

            const cita = data.cita;
            const aseguradoras = data.aseguradoras || [];

            let aseguradoraHtml = '';
            if (aseguradoras.length > 0) {
                aseguradoraHtml = `
                    <div class="mb-3">
                        <label class="form-label">Aseguradora (Opcional)</label>
                        <select class="form-select" id="id_aseguradora">
                            <option value="">Sin aseguradora</option>
                            ${aseguradoras.map(a => `
                                <option value="${a.id_aseguradora}">
                                    ${a.nombre_aseguradora} (${a.porcentaje_cobertura}%)
                                </option>
                            `).join('')}
                        </select>
                    </div>
                `;
            }

            const modalContent = `
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p><strong>Paciente:</strong> ${cita.nombre_paciente}</p>
                        <p><strong>TelÃ©fono:</strong> ${cita.celular || '-'}</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>MÃ©dico:</strong> ${cita.nombre_medico}</p>
                        <p><strong>Fecha/Hora:</strong> ${cita.fecha_formato} a las ${cita.hora_formato}</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-12">
                        <p><strong>Servicio:</strong> ${cita.nombre_servicio}</p>
                        <p><strong>Precio:</strong> $${parseFloat(cita.precio_servicio).toFixed(2)}</p>
                    </div>
                </div>
                ${aseguradoraHtml}
                <div class="row mt-4">
                    <div class="col-md-6">
                        <button type="button" class="btn btn-secondary w-100" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                    <div class="col-md-6">
                        <button type="button" class="btn btn-success w-100" onclick="confirmarMarcarAsistencia('${id_cita}')">Marcar Asistencia</button>
                    </div>
                </div>
            `;

            document.getElementById('asistencia-content').innerHTML = modalContent;
            new bootstrap.Modal(document.getElementById('modalAsistencia')).show();
        } catch (error) {
            console.error('Error:', error);
            mostrarAlerta('Error al cargar datos', 'danger');
        }
    }

    async function confirmarMarcarAsistencia(id_cita) {
        try {
            const id_aseguradora = document.getElementById('id_aseguradora')?.value || null;

            const response = await fetch(`/citas/${id_cita}/marcar-asistencia`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id_aseguradora: id_aseguradora || null })
            });

            const data = await response.json();

            if (!data.success) {
                mostrarAlerta(data.mensaje, 'danger');
                return;
            }

            bootstrap.Modal.getInstance(document.getElementById('modalAsistencia')).hide();
            mostrarAlerta('âœ… Asistencia registrada', 'success');
            setTimeout(() => cargarCitasDelMedico(), 1000);
        } catch (error) {
            console.error('Error:', error);
            mostrarAlerta('Error al marcar asistencia', 'danger');
        }
    }
</script>
