    async function confirmarMarcarAsistencia(id_cita) {
        try {
            const id_aseguradora = document.getElementById('id_aseguradora')?.value || null;

            const response = await fetch(`/citas/${id_cita}/marcar-asistencia`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id_aseguradora: id_aseguradora || null })
            });

            const data = await response.json();

            if (!data.success) {
                mostrarAlerta(data.mensaje, 'danger');
                return;
            }

            bootstrap.Modal.getInstance(document.getElementById('modalAsistencia')).hide();
            mostrarAlerta('‚úÖ Asistencia registrada', 'success');
            setTimeout(() => cargarCitasDelMedico(), 1000);
        } catch (error) {
            console.error('Error:', error);
            mostrarAlerta('Error al marcar asistencia', 'danger');
        }
    }

    let citaActualPago = null;
    let citaActualModal = null;
    let montoActualPago = null;

    async function abrirModalPagarCita(id_cita) {
        citaActualPago = id_cita;
        
        // Obtener el monto desde la cita guardada
        const monto = citaActualModal?.precio_servicio || 0;
        
        // Validar que monto sea un n√∫mero v√°lido
        if (!monto || isNaN(monto) || monto <= 0) {
            console.error('No se pudo cargar el precio del servicio. Precio:', monto);
            return;
        }
        
        montoActualPago = monto;
        document.getElementById('metodo_pago_cita').value = '';
        document.getElementById('monto_pago_cita').textContent = '$' + parseFloat(monto).toFixed(2);
        
        // Cargar aseguradoras del paciente
        try {
            const response = await fetch(`/pagos/aseguradoras-paciente/${citaActualModal?.id_paciente}`);
            const data = await response.json();
            
            if (data.success && data.aseguradoras.length > 0) {
                const selectAseg = document.getElementById('aseguradora_pago_cita');
                selectAseg.innerHTML = '<option value="">-- Sin aseguradora --</option>';
                
                data.aseguradoras.forEach(aseg => {
                    const option = document.createElement('option');
                    option.value = aseg.id_aseguradora;
                    option.textContent = `${aseg.nombre} (${aseg.porcentaje_cobertura}%)`;
                    selectAseg.appendChild(option);
                });
            }
        } catch (error) {
            console.error('Error al cargar aseguradoras:', error);
        }
        
        new bootstrap.Modal(document.getElementById('modalPagarCita')).show();
    }

    async function confirmarPagoCita() {
        const metodo_pago = document.getElementById('metodo_pago_cita').value;
        const id_aseguradora = document.getElementById('aseguradora_pago_cita').value;

        if (!metodo_pago) {
            mostrarAlerta('Por favor selecciona un m√©todo de pago', 'warning');
            return;
        }

        try {
            const response = await fetch('/pagos/pagar-cita-directa', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    id_cita: citaActualPago,
                    metodo_pago: metodo_pago,
                    id_aseguradora: id_aseguradora || null
                })
            });

            const data = await response.json();

            if (!data.success) {
                mostrarAlerta(data.mensaje, 'danger');
                return;
            }

            bootstrap.Modal.getInstance(document.getElementById('modalPagarCita')).hide();
            bootstrap.Modal.getInstance(document.getElementById('modalDetalles')).hide();
            mostrarAlerta(data.mensaje, 'success');
            
            setTimeout(() => cargarCitasDelMedico(), 1000);
        } catch (error) {
            console.error('Error:', error);
            mostrarAlerta('Error al procesar pago', 'danger');
        }
    }

    function mostrarAlerta(mensaje, tipo = 'danger') {
        const alertasDiv = document.getElementById('alertas');
        alertasDiv.innerHTML = `
            <div class="alert alert-${tipo} alert-dismissible fade show" role="alert">
                <i class="bi bi-${tipo === 'success' ? 'check-circle' : tipo === 'warning' ? 'exclamation-circle' : 'exclamation-triangle'} me-2"></i>
                ${mensaje}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        `;
    }
