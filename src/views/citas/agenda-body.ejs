    let citaActualId = null;

    function abrirModalReprogramar(id_cita, fecha, hora) {
        citaActualId = id_cita;
        const fechaObj = new Date(fecha);
        const fechaFormato = fechaObj.toISOString().split('T')[0];
        
        document.getElementById('fecha-actual').value = `${fechaFormato} a las ${hora}`;
        document.getElementById('nueva-fecha').value = '';
        document.getElementById('nueva-hora').value = '';
        
        new bootstrap.Modal(document.getElementById('modalReprogramar')).show();
    }

    async function confirmarReprogramacion() {
        const nuevaFecha = document.getElementById('nueva-fecha').value;
        const nuevaHora = document.getElementById('nueva-hora').value;

        if (!nuevaFecha || !nuevaHora) {
            mostrarAlerta('Por favor completa todos los campos', 'warning');
            return;
        }

        try {
            const response = await fetch(`/citas/${citaActualId}/reprogramar`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    nueva_fecha: nuevaFecha,
                    nueva_hora: nuevaHora
                })
            });

            const data = await response.json();

            if (!data.success) {
                mostrarAlerta(data.mensaje, 'danger');
                return;
            }

            bootstrap.Modal.getInstance(document.getElementById('modalReprogramar')).hide();
            bootstrap.Modal.getInstance(document.getElementById('modalCitasDia')).hide();
            mostrarAlerta('‚úÖ ' + data.mensaje, 'success');
            setTimeout(() => cargarCitasDelMedico(), 1000);
        } catch (error) {
            console.error('Error:', error);
            mostrarAlerta('Error al reprogramar cita', 'danger');
        }
    }

    function abrirModalCancelar(id_cita) {
        citaActualId = id_cita;
        document.getElementById('motivo-cancelacion').value = '';
        new bootstrap.Modal(document.getElementById('modalCancelarCita')).show();
    }

    async function confirmarCancelarCita() {
        const motivo = document.getElementById('motivo-cancelacion').value.trim();

        if (!motivo) {
            mostrarAlerta('Por favor especifica un motivo de cancelaci√≥n', 'warning');
            return;
        }

        if (motivo.length > 255) {
            mostrarAlerta('El motivo no puede exceder 255 caracteres', 'warning');
            return;
        }

        try {
            const response = await fetch(`/citas/${citaActualId}/cancelar`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ motivo_cancelacion: motivo })
            });

            const data = await response.json();

            if (!data.success) {
                mostrarAlerta(data.mensaje, 'danger');
                return;
            }

            bootstrap.Modal.getInstance(document.getElementById('modalCancelarCita')).hide();
            bootstrap.Modal.getInstance(document.getElementById('modalCitasDia')).hide();
            mostrarAlerta('‚úÖ ' + data.mensaje, 'success');
            setTimeout(() => cargarCitasDelMedico(), 1000);
        } catch (error) {
            console.error('Error:', error);
            mostrarAlerta('Error al cancelar cita', 'danger');
        }
    }

    async function abrirModalAsistencia(id_cita) {
        try {
            const response = await fetch(`/citas/${id_cita}/marcar-asistencia`);
            const data = await response.json();

            if (!data.success) {
                mostrarAlerta(data.mensaje, 'danger');
                return;
            }

            const cita = data.cita;
            const aseguradoras = data.aseguradoras || [];

            let aseguradoraHtml = '';
            if (aseguradoras.length > 0) {
                aseguradoraHtml = `
                    <div class="mb-3">
                        <label class="form-label">Aseguradora (Opcional)</label>
                        <select class="form-select" id="id_aseguradora">
                            <option value="">Sin aseguradora</option>
                            ${aseguradoras.map(a => `
                                <option value="${a.id_aseguradora}">
