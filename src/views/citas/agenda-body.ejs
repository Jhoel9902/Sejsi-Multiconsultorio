        .stat-card.total { border-left-color: #667eea; }
        .stat-card.confirmada { border-left-color: #198754; }
        .stat-card.completada { border-left-color: #0dcaf0; }
        .stat-card.cancelada { border-left-color: #dc3545; }
        .stat-card.hoy { border-left-color: #ff9800; }

        .stat-card .stat-label {
            font-size: 0.85rem;
            color: #666;
            margin-bottom: 0.5rem;
        }

        .stat-card .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: #333;
        }

        #calendario {
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            padding: 1.5rem;
        }

        .fc {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .fc .fc-button-primary {
            background-color: #667eea;
            border-color: #667eea;
        }

        .fc .fc-button-primary:hover {
            background-color: #764ba2;
            border-color: #764ba2;
        }

        .fc .fc-button-primary.fc-button-active {
            background-color: #764ba2;
            border-color: #764ba2;
        }

        .fc-event {
            cursor: pointer;
            border: none !important;
            padding: 2px 4px;
        }

        .fc-event-confirmada {
            background-color: #198754 !important;
        }

        .fc-event-completada {
            background-color: #0dcaf0 !important;
        }

        .fc-event-cancelada {
            background-color: #dc3545 !important;
        }

        .fc-daygrid-day-number {
            padding: 0.5rem;
        }

        .fc-daygrid-day {
            position: relative;
        }

        .fc-daygrid-day-frame {
            min-height: 100px;
        }

        .fc-col-header-cell {
            padding: 0.75rem 0;
            font-weight: 600;
        }

        .alerts-container {
            margin-bottom: 1.5rem;
        }

        .no-medico-message {
            background: #fff3cd;
            border: 1px solid #ffc107;
            padding: 1rem;
            border-radius: 6px;
            text-align: center;
            color: #856404;
        }

        @media (max-width: 768px) {
            .medico-selector-container {
                padding: 1.5rem;
            }

            .stats-container {
                grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            }

            .fc-daygrid-day-frame {
                min-height: 80px;
            }

            .fc-event-title {
                font-size: 0.75rem;
            }
        }
    </style>

